{
  "name": "lambda-handler-tester",
  "version": "0.0.5-development",
  "description": "A command line tool to test AWS Lambda handler local",
  "type": "module",
  "files": [
    "!lib/__tests__/**/*",
    "lib/**/*",
    "bin/**/*"
  ],
  "bin": {
    "lambda-handler-tester": "./bin/index.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf ./lib/",
    "cm": "cz",
    "lint": "eslint ./src/ --fix",
    "start": "TS_NODE_FILES=true ts-node ./src/cli.ts",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "test:watch": "jest --watch",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:aheissenberger/lambda-handler-tester.git"
  },
  "license": "bsd-2-clause",
  "author": {
    "name": "Andreas Heissenberger",
    "email": "andreas@heissenberger.at",
    "url": "https://github.com/aheissenberger"
  },
  "engines": {
    "node": ">=20.0"
  },
  "keywords": [
    "aws",
    "lambda",
    "testing",
    "waku",
    "vike",
    "react-server"
  ],
  "bugs": {
    "url": "https://github.com/aheissenberger/lambda-handler-tester/issues"
  },
  "homepage": "https://github.com/aheissenberger/lambda-handler-tester#readme",
  "dependencies": {
    "commander": "^12.1.0",
    "easy-table": "^1.2.0",
    "pretty-ms": "^9.1.0",
    "summary": "^2.1.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.1",
    "@ryansonshine/commitizen": "^4.2.8",
    "@ryansonshine/cz-conventional-changelog": "^3.3.4",
    "@types/aws-lambda": "^8.10.145",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.4",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "execa": "^9.4.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "semantic-release": "^24.1.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.2.1",
    "typescript": "^5.6.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@ryansonshine/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}